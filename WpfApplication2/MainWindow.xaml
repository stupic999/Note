<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!--定义格子-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--内容-->
        <Rectangle Fill="Gray">        </Rectangle>
        <StackPanel >
            <Button Margin="10" x:Name="NewBtn" Click="NewBtn_Click">New</Button>
            <Button Margin="10" x:Name="OpenBtn" Click="OpenBtn_Click">Open</Button>
            <Button Margin="10" Click="SaveBtn_Click" x:Name="SaveBtn">Save</Button>
        </StackPanel>
        <ScrollViewer Grid.Column="1"  VerticalScrollBarVisibility="Auto">
            <TextBox Grid.Column="1"  TextWrapping="Wrap" AcceptsReturn="True" x:Name="Textarea"></TextBox>
        </ScrollViewer>
    </Grid>
</Window>
